---
import { ClientRouter } from 'astro:transitions';
import '@styles/global.css'
import { SITE_INFO } from 'consts';
import Navbar from '@components/pokemons/shared/Navbar.astro';

interface Props {
	title: string,
	description?: string,
	image?: string,
}
const { 
	title, 
	description = SITE_INFO.description, 
	image = SITE_INFO.image
} = Astro.props;

---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/pokeball.png" />
		<meta name="generator" content={Astro.generator} />
		<!-- SEO -->
		<meta name="description" content={description} />
		<meta name="author" content="anerthy" />
		<!-- Open Graph / Facebook -->
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={image} />	

		<title>{title}</title>
		<ClientRouter />
	</head>
	<body class="bg-slate-800 text-slate-100">
		<Navbar />
		<main class="mt-10 m-auto max-w-3xl">
			<slot />
		</main>
	</body>
</html>